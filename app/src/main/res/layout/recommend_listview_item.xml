<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:padding="10dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/recommend_listview_item_head_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:placeholderImageScaleType="fitCenter"
        app:placeholderImage = "@drawable/llist_img_default_avatar"
        app:fadeDuration="1000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@id/recommend_listview_title"
        android:layout_toRightOf="@id/recommend_listview_item_head_imageview"
        android:text="Elizabeth Arden/雅顿"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@id/recommend_listview_subtittle"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_below="@id/recommend_listview_title"
        android:layout_toRightOf="@id/recommend_listview_item_head_imageview"
        android:text="绿茶蜜滴身体乳"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RatingBar
        android:id="@id/recommend_listview_item_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/recommend_listview_item_head_imageview"
        android:layout_below="@id/recommend_listview_subtittle"
        android:layout_alignBottom="@id/recommend_listview_item_head_imageview"
        android:layout_marginTop="30dp"
        style="?android:attr/ratingBarStyleSmall"
        />
    <TextView
        android:id="@id/recommend_listview_score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_toRightOf="@id/recommend_listview_item_ratingbar"
        android:layout_alignBottom="@id/recommend_listview_item_head_imageview"
        android:layout_marginTop="32dp"
        android:layout_marginRight="5dp"
        android:text=""/>

    <TextView
        android:id="@id/recommend_listview_commentcount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_toRightOf="@id/recommend_listview_score_textview"
        android:layout_alignBottom="@id/recommend_listview_item_head_imageview"
        android:layout_marginTop="32dp"
        android:text=""/>

</RelativeLayout>