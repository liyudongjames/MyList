<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bwf.qingdan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".QingdanApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gui.activity.MainActivity"></activity>
        <activity android:name=".gui.activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.activity.GuideActivity" />
        <activity
            android:name=".gui.activity.Article_Activity"
            android:label="@string/title_activity_article_"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".gui.activity.CollectionActivity"
            android:label="Collection_Activity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".gui.activity.RecommendActivity"
            android:label="Recommend_Activity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".gui.activity.WebImgActivity"
            android:label="WebImg_Activity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".gui.activity.AllCategorysActivity"
            android:label="AllCategorysActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>

</manifest>